<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="?colorPrimary"
    app:cardCornerRadius="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/roundImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:scaleX="3.5"
            android:scaleY="3.5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_circle_24" />

        <ImageView
            android:id="@+id/moneyImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="2.6"
            android:scaleY="2.6"
            app:layout_constraintBottom_toBottomOf="@id/roundImage"
            app:layout_constraintEnd_toEndOf="@id/roundImage"
            app:layout_constraintStart_toStartOf="@id/roundImage"
            app:layout_constraintTop_toTopOf="@id/roundImage"
            app:srcCompat="@drawable/ic_baseline_money_24" />

        <TextView
            android:id="@+id/amountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/quando"
            android:textColor="?colorOnSecondary"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/moneyImage"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Amount: 15000 rub" />

        <TextView
            android:id="@+id/stateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/quando"
            android:textColor="?colorOnSecondary"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/moneyImage"
            app:layout_constraintTop_toBottomOf="@+id/amountText"
            tools:text="State: APPROVED" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>